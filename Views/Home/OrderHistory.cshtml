@{
    ViewBag.Title = "OderHistory";
}
@section styles {
    <link rel="stylesheet" href="~/Content/Css/OrderHistory.css" />
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Tài khoản của tôi</title>
</head>
<body>
    <div class="container">
        <header>
            <h1>Tài khoản của tôi</h1>
            <div class="nav-links">
                <a class="nav-link active" data-target="orders-content">Lịch Sử Đơn Hàng</a>
                <a class="nav-link" data-target="addresses-content">Địa Chỉ</a>
            </div>
        </header>

        <div class="divider"></div>


        <div class="content-section active" id="orders-content">
            <h2>Đơn Hàng Của Tôi</h2>

            <table>
                <thead>
                    <tr>
                        <th>Đơn hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Phương thức thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Tổng cộng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="5" style="text-align: center; color: mediumblue; font-weight:700">Không có đơn hàng</td>
                    </tr>
                </tbody>
            </table>

            <div class="empty-state">
                <p>Bạn chưa đặt đơn hàng nào với chúng tôi. Khi bạn đặt hàng, chúng sẽ hiển thị ở đây.</p>
                <a href="@Url.Action("Home","Home")" class="btn">BẮT ĐẦU MUA SẮM</a>
            </div>
        </div>


        <div class="content-section" id="addresses-content">
            <h2>Địa Chỉ Của Tôi</h2>

            <div class="empty-state">
                <p><strong class="blue-text"> Không có địa chỉ </strong></p>
                <p>Bạn chưa thêm địa chỉ nào với chúng tôi. Khi bạn thêm, chúng sẽ hiển thị ở đây.</p>
                <a href="#" class="btn" id="new-address-btn">ĐỊA CHỈ MỚI</a>
            </div>
        </div>
    </div>


    <div class="popup-overlay" id="address-popup">
        <div class="popup-content">
            <div class="popup-header">
                <h2>Địa chỉ mới</h2>
                <button class="close-btn">&times;</button>
            </div>
            <div class="popup-body">
                <div class="form-section">
                    <div class="checkbox-group">
                        <label>
                            <input type="checkbox">
                            Đặt làm địa chỉ mặc định
                        </label>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Tên:</label>
                            <input type="text">
                        </div>
                        <div class="form-group">
                            <label>Họ:</label>
                            <input type="text">
                        </div>
                    </div>
                </div>

                <div class="form-divider"></div>

                <div class="form-section">
                    <lable>Công ty</lable>
                    <div class="form-group full-width">
                        <input type="text">
                    </div>
                </div>

                <div class="form-section">
                    <lable>Địa chỉ</lable>

                    <div class="form-group full-width">
                        <input type="text">
                    </div>

                    <label> Căn hộ, tầng, v.v.</label>
                    <div class=" form-group full-width">
                        <input type="text">
                    </div>


                    <div class="form-row">
                        <div class="form-group">
                            <label>Thành phố:</label>
                            <input type="text">
                        </div>
                        <div class="form-group">
                            <label>Quốc gia:</label>
                            <select>
                                <option>Việt Nam</option>
                                <option>Other countries...</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Mã bưu điện:</label>
                            <input type="text">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại:</label>
                            <input type="text">
                        </div>
                    </div>
                </div>

                <div class="form-divider"></div>

                <div class="form-actions">
                    <button class="btn" id="save-address-btn">LƯU</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');
            const contentSections = document.querySelectorAll('.content-section');
            const newAddressBtn = document.getElementById('new-address-btn');
            const addressPopup = document.getElementById('address-popup');
            const closeBtn = document.querySelector('.close-btn');
            const saveAddressBtn = document.getElementById('save-address-btn');


            navLinks.forEach(link => {
                link.addEventListener('click', function () {

                    navLinks.forEach(l => l.classList.remove('active'));
                    contentSections.forEach(section => section.classList.remove('active'));

                    this.classList.add('active');


                    const targetId = this.getAttribute('data-target');
                    document.getElementById(targetId).classList.add('active');
                });
            });


            if (newAddressBtn) {
                newAddressBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    addressPopup.classList.add('active');
                });
            }

            if (closeBtn) {
                closeBtn.addEventListener('click', function () {
                    addressPopup.classList.remove('active');
                });
            }


            addressPopup.addEventListener('click', function (e) {
                if (e.target === addressPopup) {
                    addressPopup.classList.remove('active');
                }
            });


            if (saveAddressBtn) {
                saveAddressBtn.addEventListener('click', function () {

                    addressPopup.classList.remove('active');


                    alert('Địa chỉ đã được lưu thành công!');
                });
            }

            //Lưu lịch sử đặt hàng
            const tbody = document.querySelector("table tbody");
            const emptyState = document.querySelector(".content-section#orders-content .empty-state");
            const ordersHistory = JSON.parse(localStorage.getItem("ordersHistory")) || [];

            function renderOrders() {
                if (ordersHistory.length === 0) {
                    tbody.innerHTML = `<tr>
            <td colspan="6" style="text-align:center; color:mediumblue; font-weight:700">Không có đơn hàng</td>
        </tr>`;
                    emptyState.style.display = "block";
                } else {
                    tbody.innerHTML = "";
                    emptyState.style.display = "none";

                    ordersHistory.slice().reverse().forEach((order, index) => {
                        tbody.innerHTML += `
            <tr>
                <td>${order.id}</td>
                <td>${order.date}</td>
                <td>${order.paymentMethod}</td>
                <td>
                    <p style="
                        background-color: yellow;
                        border-radius: 10px;
                        padding: 2px 8px;
                        text-align: center;
                        display: inline-block;">
                        Đang xử lý
                    </p>
                </td>
                <td>${order.total.toLocaleString()} ₫</td>
                <td>
                    <button class="detail-btn" data-index="${index}" style="background-color:blue;border-radius:10px;padding:5px;color:white;">Chi tiết</button>
                </td>
            </tr>
            `;
                    });
                    //Nút XÓA ở đặt lại ở dòng 239 để Xóa bớt lịch sử đơn hàng được tạo khi test chức năng
                    //<button class="delete-btn" data-index="${index}" style="background-color:red;border-radius:10px;padding:5px;color:white;">Xóa</button>

                    // Gắn sự kiện xóa
                    document.querySelectorAll(".delete-btn").forEach(btn => {
                        btn.addEventListener("click", function () {
                            const idx = parseInt(this.getAttribute("data-index"));
                            // Xóa đơn hàng
                            ordersHistory.splice(ordersHistory.length - 1 - idx, 1); // vì render ngược
                            localStorage.setItem("ordersHistory", JSON.stringify(ordersHistory));
                            renderOrders(); // render lại
                        });
                    });
                    // Gắn xem chi tiết hóa đơn
                    document.querySelectorAll(".detail-btn").forEach(btn => {
                        btn.addEventListener("click", function () {
                            const idx = parseInt(this.getAttribute("data-index"));
                            const order = ordersHistory[ordersHistory.length - 1 - idx];
                            window.location.href = `@Url.Action("OrderDetail","Home")?id=${order.id}`;
                        });
                    });

                }
            }

            // Gọi render lúc đầu
            renderOrders();
        });
    </script>
</body>
</html>