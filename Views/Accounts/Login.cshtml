﻿@model DeAnWEB.Models.ViewModel.LoginVM

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Content/Css/Login.css" />
}

<!DOCTYPE html>
<div class="login-container">
    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="login-box" id="loginForm">
            <div class="mb-3">
                <h2 class="col-md-6" style="text-align:left;">Đăng nhập</h2>
            </div>
            @*Tên đăng nhập*@
            <div class="mb-5">
                @Html.LabelFor(m => m.Username, new { @class = "form-label col-md-4" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", maxlength = "15" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            @*Mật khẩu*@
            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label col-md-4" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", maxlength = "20" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="mb-3">
                <div class=" col-md-10">
                    <input type="submit" value="Đăng nhập" class="btn btn-info accountbtn" /> <br />
                    <p style="padding:10px;width:100%;">Bạn chưa Có Tài Khoản? <a href="@Url.Action("Register","Accounts",null)">Đăng ký ngay</a></p>
                    @*<p style="padding:10px;">Bạn quên Mật Khẩu? <a href="@Url.Action("ChangePassword","Accounts",null)">Đổi mật khẩu</a></p>*@
                </div>
            </div>
        </div>
    }
</div>