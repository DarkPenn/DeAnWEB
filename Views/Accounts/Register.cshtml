﻿@model DeAnWEB.Models.ViewModel.RegisterVM

@{
    ViewBag.Title = "ĐĂNG KÝ TÀI KHOẢN";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@section styles {
    <link rel="stylesheet" href="~/Content/Css/Login.css" />
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var input = document.querySelector('input[name="CustomerPhone"]');
        input.value = "0"; // mặc định

        input.addEventListener('keydown', function (e) {
            if ((this.selectionStart === 0) && (e.key === 'Backspace' || e.key === 'Delete')) {
                e.preventDefault();
            }
        });

        input.addEventListener('input', function () {
            if (!this.value.startsWith('0')) {
                this.value = '0' + this.value.replace(/^0+/, '');
            }
            // Giữ tối đa 10 ký tự
            this.value = this.value.slice(0, 10);
            // Chỉ cho phép số
            this.value = '0' + this.value.slice(1).replace(/\D/g, '');
        });
    });
</script>



<div class="login-container">
    @using (Html.BeginForm("Register", "Accounts", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="login-box">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            <h2 class="col-md-6">Đăng Ký Tài Khoản</h2>
        </div>

        @*Tên đăng nhập*@
        <div class="mb-3">
            @Html.LabelFor(model => model.Username, new { @class = "form-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", maxlength = "15" } })
                <br />
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        @*Mật khẩu*@
        <div class="mb-3">
            @Html.LabelFor(model => model.Password, new { @class = "form-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", maxlength = "20" } })
                <br />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        @*Xác nhận mật khẩu*@
        <div class="mb-3">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "form-label col-md-2" })
            <div class="col-md-4">
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", maxlength = "20" })
                <br />
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
        <br />

        @*Họ tên khách hàng*@
        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerName, new { @class = "form-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", maxlength = "30" } })
                <br />
                @Html.ValidationMessageFor(model => model.CustomerName)
            </div>
        </div>
        <br />

        @*SĐT Khách hàng*@
        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerPhone, new { @class = "form-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.CustomerPhone, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   style = "width:500px; height:48px; border-left:1px solid black; border-radius:0.25rem; border:1px solid #ced4da;margin-bottom:14px;",
                   maxlength = "10"
               }
           })
                <br />
                <strong>Chỉ chấp nhận số điện thoại của Việt Nam</strong>
                <br />
                @Html.ValidationMessageFor(model => model.CustomerPhone)
            </div>
        </div>
        <br />

        @*Email khách hàng*@
        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerEmail, new { @class = "form-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.CustomerEmail, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   style = "width:500px; height:48px; border-left:1px solid black; border-radius:0.25rem; border:1px solid #ced4da;margin-bottom:14px;",
                   maxlength = "40"
               }
           })
                <br />
                @Html.ValidationMessageFor(model => model.CustomerEmail)
            </div>
        </div>
        <br />

        @*Địa chỉ khách hàng*@
        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerAddress, new { @class = "form-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.ValidationMessageFor(model => model.CustomerAddress)
            </div>
        </div>
        <br />

        <div class="mb-3">
            <div class="offset-md-2 col-md-4">
                <input type="submit" value="Đăng Ký" class="btn btn-info accountbtn" /> <br />
                <p style="padding:10px;">Bạn đã có Tài khoản? <a href="@Url.Action("Login","Accounts",null)">Đăng Nhập</a></p>
            </div>
        </div>
    </div>
    }
</div>