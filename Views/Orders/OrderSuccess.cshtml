﻿@model DeAnWEB.Models.Order

@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@section styles {
    <link rel="stylesheet" href="~/Content/Css/OrderDetail.css" />
}


    
<div class="container">
    <h1>Chi Tiết Đơn Hàng</h1>
    <a href="@Url.Action("OrderHistory","Orders")" class="btn-back">← Quay về Lịch Sử Đơn Hàng</a>
    <h3>Thông tin đơn hàng</h3>
    <div class="order-info">
        <p><strong>Mã đơn hàng: </strong>@Model.OrderID</p>
        <p><strong>Ngày đặt hàng: </strong>@Model.OrderDate</p>
        <p><strong>Trạng thái thanh toán: </strong>@Model.PaymentStatus</p>
        <p><strong>Phương thức thanh toán: </strong>@Model.PaymentMethod</p>
        <p><strong>Phương thức giao hàng: </strong>@Model.ShippingMethod</p>
        <p><strong>Địa chỉ giao hàng: </strong>@Model.ShippingAddress</p>
    </div>
    <div class="customer-info">
        <h2>Người đặt</h2>
        <p><strong>Họ tên:</strong> <span>@Model.Customer.CustomerName</span></p>
        <p><strong>Số điện thoại:</strong> <span>@Model.Customer.CustomerPhone</span></p>
        <p><strong>Địa chỉ giao hàng:</strong> <span>@Model.ShippingAddress</span></p>
    </div>
    <div class="products-info">
        <h3>Chi tiết đơn hàng</h3>
        <div class="table-wrapper">
            <table class="products-table">
                <thead>
                    <tr>
                        <th colspan="2">Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Tổng giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td><img src="@item.Product.ProductImage" alt="@item.Product.ProductName" style="max-height:80px;" /></td>
                            <td class="col-md-3">@item.Product.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.TotalPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="products-summary">
            <p><strong>Tổng số tiền: </strong>@Model.TotalAmount.ToString("N0") VNĐ</p>
        </div>
    </div>
</div>
