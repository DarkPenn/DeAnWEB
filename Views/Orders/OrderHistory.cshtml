@model List<DeAnWEB.Models.Order>
@{
    ViewBag.Title = "OderHistory";
}
@section styles {
    <link rel="stylesheet" href="~/Content/Css/OrderHistory.css" />
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Tài khoản của tôi</title>
</head>
<body>
    <div class="container">
        <header>
            <h1>Tài khoản của tôi</h1>
            <div class="nav-links">
                <a class="nav-link active" data-target="orders-content">Lịch Sử Đơn Hàng</a>
            </div>
        </header>

        <div class="divider"></div>


        <div class="content-section active" id="orders-content">
            <h2>Đơn Hàng Của Tôi</h2>
            @using (Html.BeginForm("OrderHistory", "Orders", FormMethod.Post))
            {
                <input type="date" name="searchDate" />
                <button type="submit">Tìm kiếm</button>
            }
            <table>
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Phương thức thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Tổng cộng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                    <tr>
                        <td colspan="5" style="text-align: center; color: mediumblue; font-weight:700">Không có đơn hàng</td>
                    </tr>
                    }
                    else
                    {
                        foreach (var order in Model)
                        {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.PaymentStatus</td>
                    <td>@order.TotalAmount</td>
                    <td>@Html.ActionLink("Chi Tiết", "OrderSuccess","Orders", new { id = order.OrderID }, new { style="background-color:dogerblue; border-radius:8px;" })</td>

                </tr>
                        }
                    }
                </tbody>
            </table>

            <div class="empty-state">
                <p>Bạn chưa đặt đơn hàng nào với chúng tôi. Khi bạn đặt hàng, chúng sẽ hiển thị ở đây.</p>
                <a href="@Url.Action("Index","Homes")" class="btn">BẮT ĐẦU MUA SẮM</a>
            </div>
        </div>
    </div>

     
        
   
</body>
</html>