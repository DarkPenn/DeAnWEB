@model List<DeAnWEB.Models.Order>
@{
    ViewBag.Title = "OderHistory";
}
@section styles {
    <link rel="stylesheet" href="~/Content/Css/OrderHistory.css" />
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Tài khoản của tôi</title>
</head>
<body>
    <div class="container">
        <header class="header1">
            <h1>Tài khoản của tôi</h1>
            <div class="nav-links">
                <a class="nav-link active" data-target="orders-content">Lịch Sử Đơn Hàng</a>
            </div>
        </header>

        <div class="divider"></div>


        <div class="content-section active" id="orders-content">
            <h2>Đơn Hàng Của Tôi</h2>
            @using (Html.BeginForm("OrderHistory", "Orders", FormMethod.Post))
            {
                <input type="date" name="searchDate" />
                <button type="submit">Tìm kiếm</button>
            }
            <table>
                <thead>
                    <tr class="col-md-12">
                        <th class="col-md-3">Mã đơn hàng</th>
                        <th class="col-md-2">Ngày đặt hàng</th>
                        <th class="col-md-2">Phương thức thanh toán</th>
                        <th class="col-md-2">Trạng thái</th>
                        <th class="col-md-2">Tổng cộng</th>
                        <th class="col-md-1">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                    <tr>
                        <td colspan="8" style="text-align: center; color: mediumblue; font-weight:700">Không có đơn hàng</td>
                    </tr>
                    <tr>
                        <td colspan="8" style="text-align: center;"><a href="@Url.Action("Index","Homes")" class="btn btn-info">BẮT ĐẦU MUA SẮM</a></td>
                    </tr>
                    }
                    else
                    {
                        foreach (var order in Model)
                        {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.PaymentStatus</td>
                    <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                    <td colspan="1">@Html.ActionLink("Chi Tiết", "OrderSuccess","Orders", new { id = order.OrderID }, new { @class = "btn btn-info" })</td>

                </tr>
                        }
                    }
                </tbody>
            </table>

           
        </div>
    </div>

     
        
   
</body>
</html>