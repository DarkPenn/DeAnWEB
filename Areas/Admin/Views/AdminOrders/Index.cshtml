@model IEnumerable<DeAnWEB.Models.Order>

@{
    ViewBag.Title = "IndexOrders";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">Danh sách đơn hàng</h2>

<table class="table bg-info container-fluid">
    <thead>
        <tr>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.ShippingMethod)
            </th>
            <th class="bg-success">
                @Html.DisplayNameFor(model => model.Customer.CustomerName)
            </th>
            <th class="bg-success">Action</th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentMethod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShippingAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShippingMethod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrderID }, new { @class = "btn btn-primary btn-sm" }) 
            @Html.ActionLink("Details", "Details", new { id=item.OrderID }, new { @class = "btn btn-primary btn-sm" }) 
        </td>
    </tr>
}

</table>
